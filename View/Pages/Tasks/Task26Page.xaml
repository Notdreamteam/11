<Page x:Class="WpfApp15.View.Pages.Tasks.Task26Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp15.View.Pages.Tasks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task26Page">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 10 0 0">
            <TextBlock Text="Задание 26"
                       FontSize="25"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 200">
            <TextBlock Text="Заданный массив: [-3.6, -5.5, 4.8, -5, 5.9, 7.8, 98.4, -85.4, 56.5, 46.2, 23.1, 0.5, 9.8, -1.1, 52.2]"
                       FontSize="17"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Ответ"
                    Width="110"
                    FontSize="20"
                    FontWeight="SemiBold"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 200 0 0">
            <TextBlock Text="Результат"
                       x:Name="TbA"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="Black"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 10">
            <Button Content="Задание 27"
                    Width="130"
                    FontSize="20"
                    FontWeight="SemiBold"
                    x:Name="BtnNextTask"
                    Click="BtnNextTask_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
