<Page x:Class="WpfApp15.View.Pages.Tasks.Task29Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp15.View.Pages.Tasks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task29Page">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 10 0 0">
            <TextBlock Text="Задание 29"
                       FontSize="25"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 200">
            <TextBlock Text="Заданный массив: [5.5, 6.5, 4.1, 3.8, 77.5, 98.2, 35.4, 6.6, 78.9, 123.5, 78.4, 56.1, 9.9, 8.4, 12.3, 65.4, 96.3, 123.4]"
                       FontSize="17"
                       TextWrapping="Wrap"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Ответ"
                    Width="110"
                    FontSize="20"
                    FontWeight="SemiBold"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 200 0 0">
            <TextBlock Text="Результат"
                       x:Name="TbA"
                       FontSize="20"
                       TextWrapping="Wrap"
                       FontWeight="SemiBold"
                       Foreground="Black"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 10">
            <Button Content="Выйти"
                    Width="130"
                    FontSize="20"
                    FontWeight="SemiBold"
                    x:Name="BtnNextTask"
                    Click="BtnNextTask_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
