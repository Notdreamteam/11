<Page x:Class="WpfApp15.View.Pages.Tasks.Task7Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp15.View.Pages.Tasks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task7Page">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 10 0 0">
            <TextBlock Text="Задание 7"
                       FontSize="25"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 200">
            <TextBlock Text="Заданный массив: [1, 2, 3, 32, 65, -1, 53, -54, 43, 65, -99, 0, 24, -5, 32]"
                       FontSize="17"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Ответ"
                    Width="110"
                    FontSize="20"
                    FontWeight="SemiBold"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 200 0 0">
            <TextBlock Text="Результат"
                       x:Name="TbA"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="Black"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 10">
            <Button Content="Задание 8"
                    Width="130"
                    FontSize="20"
                    FontWeight="SemiBold"
                    x:Name="BtnNextTask"
                    Click="BtnNextTask_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
